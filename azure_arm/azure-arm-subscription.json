{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "kaleidoscope-blueprint-rg",
      "metadata": {
        "description": "Name of the resource group to create"
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Location for the resource group"
      }
    },
    "userAssignedIdentityName": {
      "type": "string",
      "defaultValue": "kaleidoscope-deployment-identity",
      "metadata": {
        "description": "Name of the managed identity"
      }
    },
    "skipRoleAssignment": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Set to true if role assignment already exists (subsequent deployments)"
      }
    }
  },
  "variables": {
    "userAccessAdministratorRoleId": "18d7d88d-d35e-4fb5-a5c3-7773c20a72d9",
    "managementGroupReaderRoleId": "ac63b705-f282-497d-ac71-919bf39d939d",
    "roleAssignmentName": "[guid(subscription().subscriptionId, parameters('userAssignedIdentityName'), '18d7d88d-d35e-4fb5-a5c3-7773c20a72d9')]",
    "mgRoleAssignmentName": "[guid(tenant().tenantId, parameters('userAssignedIdentityName'), 'ac63b705-f282-497d-ac71-919bf39d939d')]",
    "mgUserAccessAdminRoleAssignmentName": "[guid(tenant().tenantId, parameters('userAssignedIdentityName'), '18d7d88d-d35e-4fb5-a5c3-7773c20a72d9-mg')]",
    "managementGroupScope": "[concat('/providers/Microsoft.Management/managementGroups/', tenant().tenantId)]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "identity-deployment",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "parameters": {
          "userAssignedIdentityName": {
            "value": "[parameters('userAssignedIdentityName')]"
          },
          "resourceGroupLocation": {
            "value": "[parameters('resourceGroupLocation')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "userAssignedIdentityName": {
              "type": "string"
            },
            "resourceGroupLocation": {
              "type": "string"
            }
          },
          "resources": [
            {
              "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
              "apiVersion": "2023-01-31",
              "name": "[parameters('userAssignedIdentityName')]",
              "location": "[parameters('resourceGroupLocation')]"
            }
          ],
          "outputs": {
            "principalId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedIdentityName')), '2023-01-31').principalId]"
            },
            "resourceId": {
              "type": "string",
              "value": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedIdentityName'))]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[variables('roleAssignmentName')]",
      "condition": "[not(parameters('skipRoleAssignment'))]",
      "dependsOn": [
        "identity-deployment"
      ],
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('userAccessAdministratorRoleId'))]",
        "principalId": "[reference('identity-deployment').outputs.principalId.value]",
        "principalType": "ServicePrincipal",
        "description": "User Access Administrator role for Kaleidoscope managed identity"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[variables('mgRoleAssignmentName')]",
      "scope": "[variables('managementGroupScope')]",
      "condition": "[not(parameters('skipRoleAssignment'))]",
      "dependsOn": [
        "identity-deployment"
      ],
      "properties": {
        "roleDefinitionId": "[tenantResourceId('Microsoft.Authorization/roleDefinitions', variables('managementGroupReaderRoleId'))]",
        "principalId": "[reference('identity-deployment').outputs.principalId.value]",
        "principalType": "ServicePrincipal",
        "description": "Management Group Reader role for Kaleidoscope managed identity to read management groups"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[variables('mgUserAccessAdminRoleAssignmentName')]",
      "scope": "[variables('managementGroupScope')]",
      "condition": "[not(parameters('skipRoleAssignment'))]",
      "dependsOn": [
        "identity-deployment"
      ],
      "properties": {
        "roleDefinitionId": "[tenantResourceId('Microsoft.Authorization/roleDefinitions', variables('userAccessAdministratorRoleId'))]",
        "principalId": "[reference('identity-deployment').outputs.principalId.value]",
        "principalType": "ServicePrincipal",
        "description": "User Access Administrator role at management group scope to assign roles"
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[parameters('resourceGroupName')]"
    },
    "managedIdentityName": {
      "type": "string",
      "value": "[parameters('userAssignedIdentityName')]"
    },
    "managedIdentityPrincipalId": {
      "type": "string",
      "value": "[reference('identity-deployment').outputs.principalId.value]",
      "metadata": {
        "description": "⚠️ NEXT STEP: Assign 'Application Administrator' role to this Principal ID in Entra ID"
      }
    },
    "managedIdentityResourceId": {
      "type": "string",
      "value": "[reference('identity-deployment').outputs.resourceId.value]",
      "metadata": {
        "description": "Use this as input for the second ARM template"
      }
    }
  }
}